<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WhatPet</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            @if (Request.IsAuthenticated)
            {
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <div class="nav-link">@Html.ActionLink("Home", "Index", "Home")</div>
                    </li>
                    <li class="nav-item active">
                        <div class="nav-link">@Html.ActionLink("About", "About", "Home")</div>
                    </li>
                    <li class="nav-item active">
                        <div class="nav-link">@Html.ActionLink("Find Your Pet", "Selector", "PetTypes")</div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Admin
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @*<div class="dropdown-divider"></div>*@
                            <div class="dropdown-item">@Html.ActionLink("Pet Classes", "Index", "PetClasses")</div>
                            <div class="dropdown-item">@Html.ActionLink("Pet Species", "Index", "Species")</div>
                            <div class="dropdown-item">@Html.ActionLink("Pet Types", "Index", "PetTypes")</div>
                            <div class="dropdown-item">@Html.ActionLink("Cost Categories", "Index", "CostCategories")</div>
                        </div>
                    </li>
                </ul>
            }
            <ul class="nav navbar-nav navbar-right">
                <li class="nav-item active">
                    @Html.Partial("_LoginPartial")
                </li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - WhatPet</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>