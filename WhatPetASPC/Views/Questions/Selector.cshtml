@model IEnumerable<WhatPetASPC.Models.Questions>
@{
    ViewBag.Title = "Selector";
}

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>

<script type="text/javascript">
    function ShowQuestion(ElementID) {
        document.getElementById(ElementID).style.visibility = "visible";
    };
</script>

<script type="text/javascript">
    function HideQuestion(ElementID) {
        document.getElementById(ElementID).style.visibility = "hidden";
    };
</script>

<script type="text/javascript">
    function checkQ10FieldResult() {
        ShowQuestion("Q11Block");
        var result = document.getElementById("Q10").value;
        if (result == "Yes") {
            ShowQuestion("Q10List");
        }
        else {
            HideQuestion("Q10List");
        }
    };
</script>

<script type="text/javascript">
    function checkQ11FieldResult() {
        ShowQuestion("Submit");
        var result = document.getElementById("Q11").value;
        if (result == "Yes") {
            ShowQuestion("Q11List");
        }
        else {
            HideQuestion("Q11List");
        }
    };
</script>

<script type="text/javascript">$("body").on("change", "#Q0", function  () { ShowQuestion("Q1Block");  });</script>
<script type="text/javascript">$("body").on("change", "#Q1", function  () { ShowQuestion("Q2Block");  });</script>
<script type="text/javascript">$("body").on("change", "#Q2", function  () { ShowQuestion("Q3Block");  });</script>
<script type="text/javascript">$("body").on("change", "#Q3", function  () { ShowQuestion("Q4Block");  });</script>
